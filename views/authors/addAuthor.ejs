<% include ../fragments/header.ejs %>

<% if (author.errors) {%>
    <h2>Errors found in your submission!</h2>
    <ul>
        <% for(let er of Object.values(author.errors)) {%>
        <li><%= er %></li>
        <% }%>
    </ul>
<% } %>

<div class="container">
    <div class="content">
        <form action="/authors" method="post" class="form-signin">
            <div class="form-group">
                <label for="bookName">First Name</label>
                <input type="text" class="form-control" name="firstName" value="<%=author.firstName%>" placeholder="Enter Author First Name">
            </div>
            <div class="form-group">
                <label for="isbn">Last Name</label>
                <input type="text" class="form-control" name="lastName" value="<%=author.lastName%>" placeholder="Enter Author Last Name">
            </div>

            <button type="submit" class="btn btn-primary">Add Author</button>
        </form>
    </div>
</div>
<% include ../fragments/footer.ejs %>